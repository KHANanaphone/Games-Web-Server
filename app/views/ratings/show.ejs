<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.ratings %>">ratings</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of rating</a></li>
</ul>

<div class="page-header">
    <h1>Details of rating</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>puzzle_id</th><td><%= rating.puzzle_id %></td></tr>

        <tr><th>value</th><td><%= rating.value %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_rating(rating), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.rating(rating), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.ratings) %>
</div>
